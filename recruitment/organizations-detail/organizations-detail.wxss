
view
{
  color: rgb(57, 4, 101);
}
.swiper_image
{
  width:100vw;
  height:50vw;
  
}
.swiper_image image{
  width:100%;
  height:100%
}
.title
{
  font-weight: bolder;
  background-color: rgb(237, 237, 237);
  font-size:6vw;
  width: 100vw;
  box-sizing: border-box;
  margin-top: 2vw;
  border-bottom-style: solid;
  border-left-style: solid;
  border-color: rgb(209, 209, 209);
  padding-left: 1vw;
  padding-bottom: 2px;
}
#titleButtom {margin-bottom: 2vw;}
.department
{
  font-weight: bold;
  background-color: rgb(237, 237, 237);
  font-size:5vw;
  box-sizing: border-box;
  margin-top: 2vw;

  border-bottom-style: solid;
  border-left-style: solid;
  border-color: rgb(209, 209, 209);
  padding-left: 2vw;
  padding-bottom: 2px;
}
.synopsis
{
  width: 96vw;
  padding: 2vw;
  word-wrap:break-word;
  white-space: pre-line;
  text-align: justify;
}
.recruitment
{
  font-weight: bold;
  margin-top: 2vw;
  margin-bottom: 1.5vw;
}
.recruitmentMessage
{
  padding-left: 1vw;
  padding-right: 1vw;
  font-size: 4.2vw;
}
.synopsis text
{
  font-weight: bold;
}
.button
{
  display:inline-block;
  width:23vw;
  font-size: 4.2vw;
  height:8vw;
  line-height: 180%;
  background-color: #575555;
  color: rgb(252, 252, 252);
  border-radius:1vw;
  padding-right: 0;
  padding-left: 0;
}
.button_hover
{
  background-color: #302f2f;
  color: rgb(219, 212, 212);
}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* 弹出层 */
.modalDlg{
  width: 70vw;
  height: 100vw;
  position: fixed;
  top: 20vw;
  left:9vw;
  right:9vw;
  z-index: 9999;
  padding:6vw;
  background-color: #fff;
  border-radius:5px;
  display: flex;
  flex-direction: column;
  align-items: left;
  font-weight: bold;
}
.test{
  width: 100%;
  height: 20vh;
  background: rgb(237, 237, 237);
  font-size: 4vw;
  border-style:solid;
  border-color: rgba(57, 4, 101, 0.679);
}
.submit
{
  display:inline;
  position:relative;
  top:3vw;
  left:5vw
}
.cancel
{
  display:inline;
  position:relative;
  top:3vw;
  left:19vw
}