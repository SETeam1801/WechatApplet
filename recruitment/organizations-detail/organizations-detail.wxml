
<view>
  <swiper class = 'swiper_image' indicator-dots="true" indicator-active-color='rgb(126, 10, 214)' indicator-color = 'rgb(103, 105, 133)' autoplay = 'true' interval="2000" duration="1000">
    <block wx:for = '{{images}}' wx:key="*this" > 
      <swiper-item>
        <image src = '{{item}}' mode='aspectFit'/>
      </swiper-item>
    </block>
  </swiper> 
</view>
<view class = 'title'>社团简介</view>
<view class = 'synopsis'><text>{{de}}</text></view>
<view class = 'title'>部门简介</view>
<view wx:for = '{{department}}' wx:key = '*this'>
  <view class = 'department'>{{item.name}} </view>
  <view class = 'synopsis'><text>{{item.de}}</text></view>
</view>